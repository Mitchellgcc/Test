echo "ğŸŒ PREVIEW_URL=$(cat .vercel/preview.txt)"

### NOTIFY  
curl -X POST $SLACK_WEBHOOK -d '{"text":"ğŸš€ '${AGENT_NAME}' deployed: '${PREVIEW_URL}'"}'

### PUSH
git add docs/agent-log.md
git commit -m "chore(log): ${AGENT_NAME} journal âœ… ${TEST_STATUS} ğŸŒ ${PREVIEW_URL}"
git push --set-upstream origin $(git branch --show-current)
gh pr create --fill

